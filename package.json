{
  "name": "city-market",
  "version": "1.0.0",
  "description": "Multi-vendor marketplace backend for Borg El Arab, Egypt",
  "private": true,
  "workspaces": [
    "shared",
    "api-gateway",
    "services/*",
    "web/*",
    "mobile/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:shared && npm run install:services",
    "install:shared": "cd shared && npm install",
    "install:services": "npm run install:gateway && npm run install:auth && npm run install:user && npm run install:vendor && npm run install:catalog && npm run install:order && npm run install:delivery && npm run install:admin && npm run install:notification",
    "install:gateway": "cd api-gateway && npm install",
    "install:auth": "cd services/auth-service && npm install",
    "install:user": "cd services/user-service && npm install",
    "install:vendor": "cd services/vendor-service && npm install",
    "install:catalog": "cd services/catalog-service && npm install",
    "install:order": "cd services/order-service && npm install",
    "install:delivery": "cd services/delivery-service && npm install",
    "install:admin": "cd services/admin-service && npm install",
    "install:notification": "cd services/notification-service && npm install",
    "build": "npm run build:shared && npm run build:services",
    "build:shared": "cd shared && npm run build",
    "build:services": "npm run build:gateway && npm run build:auth && npm run build:user && npm run build:vendor && npm run build:catalog && npm run build:order && npm run build:delivery && npm run build:admin && npm run build:notification",
    "build:gateway": "cd api-gateway && npm run build",
    "build:auth": "cd services/auth-service && npm run build",
    "build:user": "cd services/user-service && npm run build",
    "build:vendor": "cd services/vendor-service && npm run build",
    "build:catalog": "cd services/catalog-service && npm run build",
    "build:order": "cd services/order-service && npm run build",
    "build:delivery": "cd services/delivery-service && npm run build",
    "build:admin": "cd services/admin-service && npm run build",
    "build:notification": "cd services/notification-service && npm run build",
    "dev": "concurrently     \"npm run dev:gateway\"     \"npm run dev:auth\"     \"npm run dev:user\"     \"npm run dev:vendor\"     \"npm run dev:catalog\"     \"npm run dev:order\"     \"npm run dev:admin\"     \"npm run dev:notification\"     \"npm run dev:delivery\"     \"npm run dev:admin-dashboard\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:user": "cd services/user-service && npm run dev",
    "dev:vendor": "cd services/vendor-service && npm run dev",
    "dev:catalog": "cd services/catalog-service && npm run dev",
    "dev:order": "cd services/order-service && npm run dev",
    "dev:delivery": "cd services/delivery-service && npm run dev",
    "dev:admin": "cd services/admin-service && npm run dev",
    "dev:notification": "cd services/notification-service && npm run dev",
    "dev:admin-dashboard": "cd web/admin-dashboard && npm run dev",
    "dev:vendor-dashboard": "cd web/vendor-dashboard && npm run dev",
    "db:create": "node scripts/create-databases.js",
    "db:init": "npm run db:init:auth && npm run db:init:user && npm run db:init:vendor && npm run db:init:catalog && npm run db:init:order && npm run db:init:delivery && npm run db:init:notification && npm run db:init:payment",
    "db:init:auth": "cd services/auth-service && npm run db:init",
    "db:init:user": "cd services/user-service && npm run db:init",
    "db:init:vendor": "cd services/vendor-service && npm run db:init",
    "db:init:catalog": "cd services/catalog-service && npm run db:init",
    "db:init:order": "cd services/order-service && npm run db:init",
    "db:init:delivery": "cd services/delivery-service && npm run db:init",
    "db:init:notification": "cd services/notification-service && npm run db:init",
    "db:init:payment": "cd services/payment-service && npm run db:init",
    "db:seed": "npm run db:seed:auth && npm run db:seed:user && npm run db:seed:vendor && npm run db:seed:catalog && npm run db:seed:order && npm run db:seed:delivery && npm run db:seed:notification && npm run db:seed:payment",
    "db:seed:auth": "cd services/auth-service && npm run db:seed",
    "db:seed:user": "cd services/user-service && npm run db:seed",
    "db:seed:vendor": "cd services/vendor-service && npm run db:seed",
    "db:seed:catalog": "cd services/catalog-service && npm run db:seed",
    "db:seed:order": "cd services/order-service && npm run db:seed",
    "db:seed:delivery": "cd services/delivery-service && npm run db:seed",
    "db:seed:notification": "cd services/notification-service && npm run db:seed",
    "db:seed:payment": "cd services/payment-service && npm run db:seed",
    "db:reset": "npm run db:reset:auth && npm run db:reset:user && npm run db:reset:vendor && npm run db:reset:catalog && npm run db:reset:order && npm run db:reset:delivery && npm run db:reset:notification && npm run db:reset:payment",
    "db:reset:auth": "cd services/auth-service && npm run db:reset",
    "db:reset:user": "cd services/user-service && npm run db:reset",
    "db:reset:vendor": "cd services/vendor-service && npm run db:reset",
    "db:reset:catalog": "cd services/catalog-service && npm run db:reset",
    "db:reset:order": "cd services/order-service && npm run db:reset",
    "db:reset:delivery": "cd services/delivery-service && npm run db:reset",
    "db:reset:notification": "cd services/notification-service && npm run db:reset",
    "db:reset:payment": "cd services/payment-service && npm run db:reset",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "start": "node scripts/start-all.js",
    "stop": "node scripts/stop-all.js",
    "clean": "node scripts/clean.js",
    "test": "echo 'Run tests in individual services'",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "marketplace",
    "microservices",
    "multi-vendor",
    "delivery"
  ],
  "author": "City Market Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
